target C {
    scheduler: STATIC,
    timeout: 3 sec,
}

reactor Source {
    output out:int
    timer t(0, 1 sec)
    state s:int = 0
    reaction(t) -> out {=
        lf_set(out, self->s);
        lf_print("Sent %d @ %lld", self->s++, lf_time_logical_elapsed());
    =}
    reaction(t) {=
        // No op
        // This is used to test whether duplicate ADVIs and DUs are generated.
    =}
}

reactor Sink {
    input in:int
    reaction(in) {=
        lf_print("Received %d @ %lld", in->value, lf_time_logical_elapsed());
    =}
}

main reactor {
    source = new Source()
    sink = new Sink()
    source.out -> sink.in after 2 sec
}